{
  "version": 2,
  "builds": [
    {
      "src": "backend/api.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api.js"
    },
    {
      "src": "/login",
      "dest": "/login.html"
    },
    {
      "src": "/admin",
      "dest": "/admin_panel.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
